{
  "name": "update-homebrew-action",
  "version": "1.0.0",
  "description": "Automatically update Homebrew formula when a project is released",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run format && npm run lint && npm run build && npm run package"
  },
  "keywords": [
    "actions",
    "homebrew",
    "release",
    "automation"
  ],
  "author": "cajias",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^4.10.1",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
